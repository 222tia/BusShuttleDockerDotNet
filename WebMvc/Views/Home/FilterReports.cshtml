@model View.Models.FilterReportsModel
@{
    ViewData["Title"] = "Filter Reports";
}

<h1>Filter Reports By:</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ViewReports">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BusId" class="control-label">Bus:</label>
                <select asp-for="BusId" class="form-control" asp-items="ViewBag.Buses"></select>
            </div>
            <div class="form-group">
                <label asp-for="LoopId" class="control-label">Loop:</label>
                <select asp-for="LoopId" class="form-control" asp-items="ViewBag.Loops"></select>
            </div>
            <div class="form-group">
                <label asp-for="DriverId" class="control-label">Driver:</label>
                <select asp-for="DriverId" class="form-control" asp-items="ViewBag.Drivers"></select>
            </div>
            <div class="form-group">
                <label asp-for="DriverId" class="control-label">Stop:</label>
                <select asp-for="DriverId" class="form-control" asp-items="ViewBag.Stops"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Start" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
