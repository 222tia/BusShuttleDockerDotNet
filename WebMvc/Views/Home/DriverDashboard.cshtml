@model View.Models.DriverDashboardModel
@{
    ViewData["Title"] = "Driver Dashboard";
}

<h1>Driver Dashboard</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="DriverDashboard">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BusId" class="control-label">What is your bus number?</label>
                <select asp-for="BusId" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="LoopId" class="control-label">What loop will you be on?</label>
                <select asp-for="LoopId" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Start" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
